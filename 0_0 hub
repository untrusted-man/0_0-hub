local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local UI_State = {Visible = false, CurrentTab = "Welcome", Draggable = false, DragStart = nil, StartPos = nil}
local currentTheme = "Dark"
local currentLang = "en"

-- Theme definitions
local Themes = {
    Dark = {Background=Color3.fromRGB(28,28,36), Secondary=Color3.fromRGB(40,40,52), Primary=Color3.fromRGB(55,55,70), Accent=Color3.fromRGB(120,110,255), Text=Color3.fromRGB(235,235,245), TextSecondary=Color3.fromRGB(180,180,190)},
    Pastel = {Background=Color3.fromRGB(255,240,245), Secondary=Color3.fromRGB(255,225,235), Primary=Color3.fromRGB(255,200,220), Accent=Color3.fromRGB(255,105,180), Text=Color3.fromRGB(60,40,50), TextSecondary=Color3.fromRGB(120,90,100)},
    Ocean = {Background=Color3.fromRGB(20,30,40), Secondary=Color3.fromRGB(30,45,60), Primary=Color3.fromRGB(40,60,80), Accent=Color3.fromRGB(0,170,255), Text=Color3.fromRGB(220,230,240), TextSecondary=Color3.fromRGB(170,180,190)}
}

-- Localization
local Translations = {
    en={hub_title="0_0 Hub", welcome_tab="Welcome", scripts_tab="Scripts", settings_tab="Settings", info_tab="Info", close_tooltip="Close", welcome_header="Welcome, ", welcome_desc="Select a tab to get started.", anime_visuals_btn="üå∏ Anime Visuals üå∏", day_night_btn="‚òÄÔ∏è Day/Night üåô", inf_yield_btn="Infinite Yield", esp_toggle_btn="üëÅ ESP Toggle", login_user_placeholder="Username", login_pass_placeholder="Password", login_btn="Login", login_success="Login successful!", login_fail="Credentials incorrect."},
    es={hub_title="Centro 0_0", welcome_tab="Bienvenida", scripts_tab="Scripts", settings_tab="Ajustes", info_tab="Informaci√≥n", close_tooltip="Cerrar", welcome_header="¬°Bienvenido, ", welcome_desc="Selecciona una pesta√±a para comenzar.", anime_visuals_btn="üå∏ Visuales Anime üå∏", day_night_btn="‚òÄÔ∏è D√≠a/Noche üåô", inf_yield_btn="Infinite Yield", esp_toggle_btn="üëÅ Activar ESP", login_user_placeholder="Usuario", login_pass_placeholder="Contrase√±a", login_btn="Iniciar Sesi√≥n", login_success="¬°Inicio de sesi√≥n exitoso!", login_fail="Credenciales incorrectas."}
}

-- Utility functions
local function tween(obj, props, time, style, dir)
    TweenService:Create(obj, TweenInfo.new(time or 0.3, style or Enum.EasingStyle.Sine, dir or Enum.EasingDirection.Out), props):Play()
end

-- Placeholder for script functions
local function runAnimeVisuals() print("Anime Visuals activated") end
local function runDayNight() print("Day/Night toggled") end
local function runInfiniteYield() print("Infinite Yield executed") end
local function toggleESP() print("ESP toggled") end

-- UI creation
local function createUI()
    local Gui = Instance.new("ScreenGui", playerGui)
    Gui.Name = "0_0_Hub_UI_V4"

    local Main = Instance.new("Frame", Gui)
    Main.Name = "Main" Main.Size = UDim2.new(0,600,0,400) Main.Position = UDim2.new(0.5,-300,0.5,-200) Main.BackgroundColor3 = Themes[currentTheme].Background
    Instance.new("UICorner", Main).CornerRadius = UDim.new(0,12)

    local Header = Instance.new("Frame", Main)
    Header.Size = UDim2.new(1,0,0,40) Header.BackgroundColor3 = Themes[currentTheme].Secondary
    Instance.new("UICorner", Header).CornerRadius = UDim.new(0,12)

    local Title = Instance.new("TextLabel", Header)
    Title.Size = UDim2.new(1,-50,1,0) Title.Position = UDim2.new(0,20,0,0)
    Title.Text = Translations[currentLang].hub_title Title.TextColor3 = Themes[currentTheme].Text Title.Font = Enum.Font.GothamBold Title.TextSize = 18 Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.BackgroundTransparency = 1

    local CloseButton = Instance.new("TextButton", Header)
    CloseButton.Size = UDim2.new(0,30,0,30) CloseButton.Position = UDim2.new(1,-35,0.5,-15) CloseButton.Text = "‚úï" CloseButton.BackgroundTransparency = 1
    CloseButton.TextColor3 = Themes[currentTheme].TextSecondary CloseButton.Font = Enum.Font.GothamBold CloseButton.TextSize = 20
    CloseButton.MouseButton1Click:Connect(function() Gui.Enabled = false end)

    -- Tabs container
    local NavBar = Instance.new("Frame", Main)
    NavBar.Size = UDim2.new(0,150,1,-40) NavBar.Position = UDim2.new(0,0,0,40) NavBar.BackgroundColor3 = Themes[currentTheme].Secondary
    local Content = Instance.new("Frame", Main) Content.Size = UDim2.new(1,-150,1,-40) Content.Position = UDim2.new(0,150,0,40) Content.BackgroundTransparency = 1

    -- Example Script Buttons
    local AnimeBtn = Instance.new("TextButton", Content)
    AnimeBtn.Size = UDim2.new(0,200,0,40) AnimeBtn.Position = UDim2.new(0,20,0,20)
    AnimeBtn.Text = Translations[currentLang].anime_visuals_btn
    AnimeBtn.BackgroundColor3 = Themes[currentTheme].Primary
    AnimeBtn.TextColor3 = Themes[currentTheme].Text
    AnimeBtn.MouseButton1Click:Connect(runAnimeVisuals)

    local DayNightBtn = AnimeBtn:Clone() DayNightBtn.Position = UDim2.new(0,20,0,70) DayNightBtn.Text = Translations[currentLang].day_night_btn
    DayNightBtn.Parent = Content DayNightBtn.MouseButton1Click:Connect(runDayNight)

    local InfYieldBtn = AnimeBtn:Clone() InfYieldBtn.Position = UDim2.new(0,20,0,120) InfYieldBtn.Text = Translations[currentLang].inf_yield_btn
    InfYieldBtn.Parent = Content InfYieldBtn.MouseButton1Click:Connect(runInfiniteYield)

    local ESPBtn = AnimeBtn:Clone() ESPBtn.Position = UDim2.new(0,20,0,170) ESPBtn.Text = Translations[currentLang].esp_toggle_btn
    ESPBtn.Parent = Content ESPBtn.MouseButton1Click:Connect(toggleESP)
end

createUI()
